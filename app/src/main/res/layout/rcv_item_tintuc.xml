<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgTintuc"
        android:layout_width="410dp"
        android:layout_height="250dp"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        android:src="@drawable/event1" />

    <TextView
        android:id="@+id/txtTieude"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/utahcondensedbold"
        android:padding="10dp"
        android:text="BALENCIAGA NEW CAMPAIGN SPRING 2022"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtMotangan"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_weight="1"
        android:autoSizeTextType="uniform"
        android:ellipsize="end"
        android:maxLines="4"
        android:paddingLeft="10dp"
        android:paddingTop="0dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:text="A new installment of Balenciga's multi-phase campaign photographed by Stef Mitchell will be released in several waves"
        android:textColor="#222222" />

</LinearLayout>