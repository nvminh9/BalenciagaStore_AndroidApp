<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/carditem"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backitemproduct"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnThemGioHang"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_centerVertical="true"
                android:layout_marginTop="3dp"
                android:layout_toEndOf="@id/btnDatMua"
                android:layout_weight="1"
                android:background="@color/white"
                android:contentDescription="btnGioHang"
                android:src="@drawable/iconaddcart1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.829"
                app:layout_constraintStart_toEndOf="@id/btnDatMua"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.424" />

            <ImageButton
                android:id="@+id/btnThemFav"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_centerVertical="true"
                android:layout_marginTop="4dp"
                android:layout_toEndOf="@id/btnThemGioHang"
                android:layout_weight="1"
                android:background="@color/white"
                android:contentDescription="btnFav"
                android:src="@drawable/iconfavsmall"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.958"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.424" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imgitemsp"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:scaleType="fitCenter"
            android:src="@drawable/accessories" />

        <TextView
            android:id="@+id/nameitemsp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoSizeTextType="uniform"
            android:fontFamily="sans-serif"
            android:padding="10dp"
            android:text="Mono Rectangle Sunglasses"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/priceitemsp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoSizeTextType="uniform"
            android:fontFamily="sans-serif"
            android:padding="10dp"
            android:text="$540"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoSizeTextType="uniform"
            android:fontFamily="sans-serif"
            android:padding="10dp"
            android:text="Quantity : "
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.cardview.widget.CardView>